@model prjVegetable.Models.CCustomerWrap

@{
    ViewData["Title"] = "會員註冊";
}

<div class="container mt-5 mx-auto col-md-6">
    <div class="card-header bg-primary text-white text-center " style="border-top-left-radius: 15px; border-top-right-radius: 15px; width:30%;">
        <h3 class="mb-0">會員註冊</h3>
    </div>
    <!-- 外層卡片，並加上圓角 -->
    <div class="card shadow " style="border-radius: 15px;border-top-left-radius: 0;">
        <!-- 標題區塊放到卡片外部 -->

        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- 會員帳號 -->
                <div class="mb-3 form-group">
                    <label asp-for="FAccount" class="control-label"></label>
                    <input asp-for="FAccount" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FAccount" class="text-danger"></span>
                </div>
                <!-- 會員密碼 -->
                <div class="mb-3 form-group">
                    <label asp-for="FPassword" class="control-label"></label>
                    <input asp-for="FPassword" type="password" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control text-start w-100 border-1 border-dark" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <!-- 會員姓名 -->
                <div class="mb-3 form-group">
                    <label asp-for="FName" class="control-label"></label>
                    <input asp-for="FName" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>

                <!-- 生日與性別並排 -->
                <div class="row mb-3">
                    <div class="col-md-6 form-group">
                        <label asp-for="FBirth" class="control-label"></label>
                        <input asp-for="FBirth" type="date" class="form-control text-start w-50 border-1 border-dark">
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="FGender" class="control-label"></label>
                        <select asp-for="FGender" class="form-control text-start border-1 border-dark w-50">
                            <option value="" disabled selected hidden>請選擇</option>
                            <option value="男">男性</option>
                            <option value="女">女性</option>
                            <option value="其他">其他</option>
                        </select>
                        <span asp-validation-for="FGender" class="text-danger"></span>
                    </div>
                </div>
                <!-- 會員手機 -->
                <div class="mb-3 form-group">
                    <label asp-for="FPhone" class="control-label"></label>
                    <input asp-for="FPhone" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FPhone" class="text-danger"></span>
                </div>
                <!-- 會員家電 -->
                <div class="mb-3 form-group">
                    <label asp-for="FTel" class="control-label"></label>
                    <input asp-for="FTel" class="form-control text-start w-100 border-1 border-dark" />
                    <span asp-validation-for="FTel" class="text-danger "></span>
                </div>
                <!-- 會員地址 -->
                <div class="mb-3 form-group">
                    <label asp-for="FAddress" class="control-label"></label>
                    <input asp-for="FAddress" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FAddress" class="text-danger"></span>
                </div>
                <!-- 會員Email -->
                <div class="mb-3">
                    <label asp-for="FEmail" class="control-label"></label>
                    <input asp-for="FEmail" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FEmail" class="text-danger"></span>
                </div>
                <!-- 會員統編 -->
                <div class="mb-3">
                    <label asp-for="FUbn" class="control-label"></label>
                    <input asp-for="FUbn" class="form-control text-start w-100 border-1 border-dark">
                    <span asp-validation-for="FEmail" class="text-danger"></span>
                </div>
                <!-- 按鈕 -->
                <div class="form-group d-flex justify-content-end mt-4">
                    <input type="submit" value="確認送出" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["ErrorRegister"] != null)
    {
        <script>
            alert('@Html.Raw(TempData["ErrorRegister"].ToString())');
        </script>
    }
}


