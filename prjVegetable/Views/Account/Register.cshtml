@model prjVegetable.Models.CCustomerWrap
@using System.Text.Json﻿
@{
    ViewData["Title"] = "會員註冊";
}

<div class="container mt-5 mx-auto col-md-6">
    <div class="card-header bg-primary text-white text-center " style="border-top-left-radius: 15px; border-top-right-radius: 15px; width:30%;">
        <h3 class="mb-0">會員註冊</h3>
    </div>
    <!-- 外層卡片，並加上圓角 -->
    <div class="card shadow " style="border-radius: 15px;border-top-left-radius: 0;">
        <!-- 標題區塊放到卡片外部 -->

        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- 會員姓名 -->
                <div class="mb-3 form-group">
                    <label asp-for="FName" class="control-label"></label>
                    <input asp-for="FName" class="form-control text-start w-100 border-1 border-dark" required>
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                <!-- 會員帳號 -->
                <div class="mb-3 form-group">
                    <label asp-for="FAccount" class="control-label"></label>
                    <input asp-for="FAccount" class="form-control text-start w-100 border-1 border-dark" required>
                    <span asp-validation-for="FAccount" class="text-danger"></span>
                </div>
                <!-- 會員密碼 -->
                <div class="mb-3 form-group">
                    <label asp-for="FPassword" class="control-label"></label>
                    <div class="input-group d-flex">
                        <input asp-for="FPassword" id="FPassword" type="password" class="form-control text-start w-auto border-1 border-dark" required>
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('FPassword')">
                            <i class="bi bi-eye"></i> <!-- 顯示眼睛圖標 -->
                        </button>
                    </div>
                    <span asp-validation-for="FPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <div class="input-group d-flex">
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control text-start w-auto border-1 border-dark" required>
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('ConfirmPassword')">
                            <i class="bi bi-eye"></i> <!-- 顯示眼睛圖標 -->
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- 生日與性別並排 -->
                <div class="row mb-3">
                    <div class="col-md-6 form-group">
                        <label asp-for="FBirth" class="control-label"></label>
                        <input asp-for="FBirth" type="date" id="FBirth" class="form-control text-start w-50 border-1 border-dark" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="FGender" class="control-label"></label>
                        <select asp-for="FGender" class="form-control text-start border-1 border-dark w-50" required>
                            <option value="" disabled selected hidden>請選擇</option>
                            <option value="男">男</option>
                            <option value="女">女</option>
                            <option value="其他">其他</option>
                        </select>
                        <span asp-validation-for="FGender" class="text-danger"></span>
                    </div>
                </div>
                <!-- 會員手機 -->
                <div class="mb-3 form-group">
                    <label asp-for="FPhone" class="control-label"></label>
                    <input asp-for="FPhone" class="form-control text-start w-100 border-1 border-dark" required>
                    <span asp-validation-for="FPhone" class="text-danger"></span>
                </div>
                <!-- 會員家電 -->
                <div class="mb-3 form-group">
                    <label asp-for="FTel" class="control-label"></label>
                    <input asp-for="FTel" class="form-control text-start w-100 border-1 border-dark" />
                    <span asp-validation-for="FTel" class="text-danger "></span>
                </div>
                <!-- 會員地址 -->
                <div class="mb-3 form-group">
                    <label asp-for="FAddress" class="control-label"></label>
                    <input asp-for="FAddress" class="form-control text-start w-100 border-1 border-dark" required>
                    <span asp-validation-for="FAddress" class="text-danger"></span>
                </div>

                <!-- 會員統編 -->
                <div class="mb-3">
                    <label asp-for="FUbn" class="control-label"></label>
                    <input asp-for="FUbn" class="form-control text-start w-100 border-1 border-dark">

                </div>
                <!-- 按鈕 -->
                <div class="form-group d-flex justify-content-betweenmt-4">
                    <button type="button" onclick="demo()" class="btn btn-secondary">Demo</button>
                    <input type="submit" value="確認送出" class="btn btn-primary ms-auto" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let birthInput = document.getElementById("FBirth");

            // 設定最大值為今天，最小值為 200 年前
            let today = new Date().toISOString().split("T")[0];
            let minDate = new Date();
            minDate.setFullYear(minDate.getFullYear() - 200);
            let minDateString = minDate.toISOString().split("T")[0];

            birthInput.setAttribute("max", today);
            birthInput.setAttribute("min", minDateString);

            // 阻止手動輸入
            birthInput.addEventListener("keypress", function (e) {
                e.preventDefault();
            });

            birthInput.addEventListener("paste", function (e) {
                e.preventDefault();
            });
        });
    </script>
    <script>
        function demo() {
            document.getElementById("FName").value = "王小明";
            document.getElementById("FAccount").value = "test145vege@gmail.com";
            document.getElementById("FPassword").value = "test145vege@gmail.com";
            document.getElementById("ConfirmPassword").value = "test145vege@gmail.com";
            document.getElementById("FBirth").value = "1995-08-20";
            document.getElementById("FGender").value = "男";
            document.getElementById("FPhone").value = "0912345678";
            document.getElementById("FTel").value = "02-2345678";
            document.getElementById("FAddress").value = "台北市信義區";
            document.getElementById("FUbn").value = "12345678";
        }
    </script>
    @{
        if (TempData.Peek("ErrorRegister") != null)
        {
            <script>
                Swal.fire({
                    title: "註冊失敗",
                    text: @Json.Serialize(TempData["ErrorRegister"]),
                    icon: "error"
                });
            </script>
        }
        var userJson = @Context.Session.GetString(CDictionary.SK_LOGINED_USER);
    }
    <script>
        window.onload = function () {
            if (@userJson != null) {
                window.location.href = "/";
            }
        };
    </script>
    <script>
        function togglePasswordVisibility(inputId) {
            var input = document.getElementById(inputId);
            var icon = input.nextElementSibling.querySelector('i'); // 獲取按鈕中的圖標

            if (input.type === "password") {
                input.type = "text"; // 顯示密碼
                icon.classList.remove("bi-eye"); // 移除顯示眼睛圖標
                icon.classList.add("bi-eye-slash"); // 添加隱藏眼睛圖標
            } else {
                input.type = "password"; // 隱藏密碼
                icon.classList.remove("bi-eye-slash"); // 移除隱藏眼睛圖標
                icon.classList.add("bi-eye"); // 添加顯示眼睛圖標
            }
        }
    </script>
}


