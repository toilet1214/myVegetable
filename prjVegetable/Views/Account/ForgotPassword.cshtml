@{
    ViewData["Title"] = "忘記密碼";
}

<h2>忘記密碼</h2>

@if (TempData["ErrorForgot"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorForgot"]</div>
}

@if (TempData["SuccessForgot"] != null)
{
    <div class="alert alert-success">@TempData["SuccessForgot"]</div>
}

<form asp-action="ForgotPassword" method="post">
    <div>
        <label>請輸入您的 Email：</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">發送重設密碼郵件</button>
</form>
