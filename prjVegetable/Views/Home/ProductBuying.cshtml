<style>
    body {
        font-family: Arial, sans-serif;
    }

    .container {
        margin-top: 20px;
    }

    .header,
    .footer {
        margin-bottom: 20px;
    }

        .header .btn-group,
        .footer .btn-group {
            margin-right: 10px;
        }

    .label-title {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .content {
        margin-bottom: 20px;
    }

    .table-container {
        margin-top: 20px;
    }

    table,
    th,
    td {
        border: 1px solid #ccc;
    }

    th,
    td {
        padding: 8px;
        text-align: center;
    }

    .btn-img {
        background: url('magnifier-icon.png') no-repeat center center;
        background-size: contain;
        border: none;
        width: 32px;
        height: 32px;
    }
    /* 添加黑色3px邊框，並設置寬度和高度 */ input[type="text"], input[type="date"], select {
        border: 1px solid black;
        width: 200px;
        height: 35px;
        box-sizing: border-box;}

        textarea{
        border: 1px solid black !important;
        width: 400px !important; 
        height: 200px !important;
      }
</style>


<body>
    <div class="container">
        <!-- Header / Label -->
        <div class="header">
            <span class="label-title">進貨單維護</span>
        </div>

        <!-- Button Group -->
        <div class="btn-group mb-3">
            <button type="button" class="btn btn-secondary">搜尋</button>
            <button type="button" class="btn btn-secondary">重整</button>
        </div>
        <div class="btn-group mb-3">
            <button type="button" class="btn btn-secondary">第一筆</button>
            <button type="button" class="btn btn-secondary">上一筆</button>
            <button type="button" class="btn btn-secondary">下一筆</button>
            <button type="button" class="btn btn-secondary">最後一筆</button>
        </div>
        <div class="btn-group mb-3">
            <button type="button" class="btn btn-primary">新增</button>
            <button type="button" class="btn btn-primary">修改</button>
            <button type="button" class="btn btn-danger">作廢</button>
            <button type="button" class="btn btn-secondary">取消</button>
            <button type="button" class="btn btn-success">儲存</button>
            <button type="button" class="btn btn-info">列印</button>
            <button type="button" class="btn btn-warning">離開</button>
        </div>

        <!-- Margin Sections -->
        <div class="margin-section mb-3">
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">進貨日期</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">進貨單號</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control">
                </div>
                <div class="col-sm-2">
                    <button class="btn-img"></button>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">發票號碼</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">進貨別</label>
                <div class="col-sm-10">
                    <select class="form-select">
                        <option>選項1</option>
                        <option>選項2</option>
                    </select>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">廠商</label>
                <div class="col-sm-8">
                    <select class="form-select">
                        <option>選項1</option>
                        <option>選項2</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <label class="form-label">廠商名稱</label>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">發票日期</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">備註</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="text-notes"></textarea>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">發票格式</label>
                <div class="col-sm-10">
                    <select class="form-select">
                        <option>選項1</option>
                        <option>選項2</option>
                    </select>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">採購人員</label>
                <div class="col-sm-10">
                    <select class="form-select">
                        <option>選項1</option>
                        <option>選項2</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Label for detail section -->
        <div class="margin-section mb-3">
            <label class="label-title">進貨明細</label>
            <div class="mb-3">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="itemOption" id="itemCode" value="itemCode">
                    <label class="form-check-label" for="itemCode">品名編號</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="itemOption" id="barcode" value="barcode">
                    <label class="form-check-label" for="barcode">國際條碼</label>
                </div>
            </div>

            <!-- SQL Data Table Display -->
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>品名編號</th>
                            <th>品名規格</th>
                            <th>數量</th>
                            <th>單位</th>
                            <th>類別名稱</th>
                            <th>單價</th>
                            <th>折數</th>
                            <th>金額</th>
                            <th>備註</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>DC007</td>
                            <td>EB235 洗髮乳(白)</td>
                            <td>10</td>
                            <td>個</td>
                            <td>一般商品</td>
                            <td>250</td>
                            <td>10.00</td>
                            <td>2500</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>DC008</td>
                            <td>國際經典香水</td>
                            <td>5</td>
                            <td>瓶</td>
                            <td>一般商品</td>
                            <td>200</td>
                            <td>10.00</td>
                            <td>1000</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Margin Section for Footer Info -->
        <div class="margin-section mb-3">
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">建檔人員</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">修改人員</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">付款期限</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control">
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-sm-2 col-form-label">進貨額</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control">
                </div>
            </div>
</body>
