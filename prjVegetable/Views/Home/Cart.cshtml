@model List<prjVegetable.Models.TCart>
@{
}
<style>
    .h3 {
        font-size: 50px;
        position: relative;
    }

    .btn-primary {
        background-color: #667b68;
        border: none;
        padding: 12px 20px;
        font-size: 20px;
    }

        .btn-primary:active {
            background-color: #5f624e;
            border: none;
        }

        .btn-primary:hover {
            background-color: #5f624e;
            border: none;
        }
    .h6,
    .h4{
        font-size: 25px;
    }

    .large-checkbox {
        width: 15px;
        /* 設定寬度 */
        height: 15px;
        /* 設定高度 */
        transform: scale(1.2);
        /* 放大比例 */
        margin-right: 5px;
        /* 調整與文字間距 */
        margin-left: 10px;
    }

    textarea {
        height: 100px;
        width: 370px !important;
        resize: none;
        text-align: left !important;
    }

    .small-textbox {
        width: 50px;
        text-align: center;
        margin-top: 7px;
    }
</style>
<body>
    <div class="container my-5">
        <!-- 購物車清單 -->
        <div class="py-4 mb-4 mb-lg-10" style="background-color: #a3b899">
            <h1 class="h3 mb-0 text-center">購物車清單</h1>
        </div>
        <div class="row g-4 g-lg-10">
            <!-- 商品列表 -->
            <div class="col-lg-8">
                <div class="border rounded-3 p-4">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="row align-items-center pb-4">
                                <!-- 商品圖片 -->
                                <div class="col-12 col-md-auto">
                                    <img class="d-block mx-auto" width="120" src="assets/img/product-placeholder.png" alt="@item.FProductName">
                                </div>
                                <!-- 商品名稱與價格 -->
                                <div class="col-12 col-md text-center text-md-start">
                                    <h6 class="mb-0">@item.FProductName</h6>
                                    <span class="d-block text-danger">單價: $@item.FPrice</span>
                                </div>
                                <!-- 數量調整 -->
                                <div class="col-12 col-md-auto">
                                    <form asp-action="AddToCart" method="post">
                                        <div class="d-flex justify-content-center align-items-center">
                                            <button class="btn btn-outline-secondary btn-sm" type="submit">-</button>
                                            <input type="hidden" name="productId" value="@item.FProductId" />
                                            <span class="mx-2">@item.FCount</span>
                                            <button class="btn btn-outline-secondary btn-sm" type="submit">+</button>
                                        </div>
                                    </form>
                                </div>
                                <!-- 移除按鈕 -->
                                <div class="col-12 col-md-auto">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.FProductId" />
                                        <button class="btn btn-link text-danger px-0" type="submit">移除</button>
                                    </form>
                                </div>
                            </div>
                            <hr class="mb-4">
                        }
                    }
                    else
                    {
                        <p class="text-center">購物車目前沒有商品。</p>
                    }
                </div>
            </div>

            <!-- 收貨人資料與結帳資訊 -->
            <div class="col-lg-4">
                <div class="card border" style="background-color:#dde6d5">
                    <div class="card-body">
                        <!-- 總金額 -->
                        <div class="d-flex align-items-center justify-content-between">
                            <h4>總金額</h4>
                            <h4>$@ViewBag.TotalPrice</h4>
                        </div>
                        <hr class="mb-4">
                        <!-- 收貨人資料表單 -->
                        <form method="post" asp-action="Checkout">
                            <!-- 同會員資料 -->
                            <div class="mb-4">
                                <input type="checkbox" id="SameAsMember" class="large-checkbox" />
                                <label for="SameAsMember">同會員資料</label>
                            </div>

                            <!-- 收貨人姓名 -->
                            <div class="mb-4">
                                <label for="shippingName">收貨人姓名</label>
                                <input type="text" id="shippingName" name="shippingName" class="form-control" style="width:100%;" required />
                            </div>

                            <!-- 收貨人電話 -->
                            <div class="mb-4">
                                <label for="shippingPhone">收貨人電話</label>
                                <input type="text" id="shippingPhone" name="shippingPhone" class="form-control" style="width:100%;" required />
                            </div>

                            <!-- 收貨人地址 -->
                            <div class="mb-4">
                                <label for="shippingAddress">收貨人地址</label>
                                <textarea id="shippingAddress" name="shippingAddress" class="form-control" style="width:100%;" required></textarea>
                            </div>

                            <!-- 備註 -->
                            <div class="mb-4">
                                <label for="note">備註</label>
                                <textarea name="note" class="form-control">無</textarea>
                            </div>

                            <!-- 確認付款 -->
                            <button class="btn btn-primary w-100" type="submit">確認付款</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // 模擬會員資料與訂購人資料
        const memberData = {
            name: "會員姓名",
            phone: "會員電話",
            address: "會員地址",
            
        };

        const buyerData = {
            name: "收貨人姓名",
            phone: "收貨人電話",
            address: "收貨人地址",
            
        };

        // 同會員資料邏輯
        document.getElementById('SameAsMember').addEventListener('change', function () {
            if (this.checked) {
                // 填入會員資料
                document.getElementById('shippingName').value = memberData.name;
                document.getElementById('shippingPhone').value = memberData.phone;
                document.getElementById('shippingAddress').value = memberData.address;
            } else {
                // 填入訂購人資料（或清空）
                document.getElementById('shippingName').value = buyerData.name || '';
                document.getElementById('shippingPhone').value = buyerData.phone || '';
                document.getElementById('shippingAddress').value = buyerData.address || '';
            }
        });
    </script>

</body>