@model IEnumerable<prjVegetable.Models.CGoodsInAndOutWrap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
    
}

<h1>進出貨資料列表</h1>

<p>
    <button asp-action="Create" class="btn btn-outline-primary" >新增進出貨貨單資料</button>
</p>
<table class="table" id="List">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FInOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FInvoiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FProviderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPersonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FEditor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FNote)
            </th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FId)</td>
                <td>@Html.DisplayFor(modelItem => item.FInOutText)</td> <!-- 顯示進出貨狀態的對應文字 -->
                <td>@Html.DisplayFor(modelItem => item.FDate)</td>
                <td>@Html.DisplayFor(modelItem => item.FInvoiceId)</td>
                <td>@Html.DisplayFor(modelItem => item.FProviderName)</td> <!-- 顯示供應商名稱 -->
                <td>@Html.DisplayFor(modelItem => item.FPersonName)</td> <!-- 顯示顧客名稱 -->
                <td>@Html.DisplayFor(modelItem => item.FTotal)</td>
                <td>@Html.DisplayFor(modelItem => item.FEditor)</td>
                <td>@Html.DisplayFor(modelItem => item.FNote)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FId">編輯資料</a><br />
                    <a asp-action="Details" asp-route-id="@item.FId">詳細資料</a><br />
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('#List').DataTable({
                "paging": true, // 啟用分頁
                "lengthChange": false, // 允許用戶改變每頁顯示數量
                "searching": true, // 啟用搜尋
                "ordering": true, // 啟用排序
                "info": true, // 顯示資訊
                "autoWidth": false, // 禁用自動調整寬度
                "language": {
                    "lengthMenu": "顯示 _MENU_ 筆資料",
                    "zeroRecords": "沒有符合的訂單",
                    "info": "顯示第 _START_ 到 _END_ 筆，共 _TOTAL_ 筆",
                    "infoEmpty": "沒有可顯示的資料",
                    "infoFiltered": "(從 _MAX_ 筆資料過濾)",
                    "search": "搜尋：",
                    "paginate": {
                        "first": "第一頁",
                        "last": "最後一頁",
                        "next": "下一頁",
                        "previous": "上一頁"
                    }
                },
                "lengthMenu": [5, 10, 25, 50], // 選擇每頁顯示 5, 10, 25, 50 筆
                "lengthChange": true, // 允許改變筆數
            });
        });
    </script>

}

