@model IEnumerable<prjVegetable.Models.CInvoiceDetailWrap>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
}

<h1>發票明細管理</h1>
@* @using (Html.BeginForm())
{
    @:請輸入發票號碼: @Html.TextBox("txtKeyword")
    <button type="submit" class="btn btn-warning">查詢</button>
} *@
<div class="mt-3 mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary">新增發票明細</a>
</div>

<table class="table" id="List">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FSum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FSum)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.FId })" class="btn btn-success">修改</a>
                        <a href="@Url.Action("Delete", new { id = item.FId })" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?');">刪除</a>
                    </td>
                </tr>
            }


        }
    </tbody>
</table>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('#List').DataTable({
                "paging": true, // 啟用分頁
                "lengthChange": false, // 允許用戶改變每頁顯示數量
                "searching": true, // 啟用搜尋
                "ordering": true, // 啟用排序
                "info": true, // 顯示資訊
                "autoWidth": false, // 禁用自動調整寬度
                "language": {
                    "lengthMenu": "顯示 _MENU_ 筆資料",
                    "zeroRecords": "沒有符合的訂單",
                    "info": "顯示第 _START_ 到 _END_ 筆，共 _TOTAL_ 筆",
                    "infoEmpty": "沒有可顯示的資料",
                    "infoFiltered": "(從 _MAX_ 筆資料過濾)",
                    "search": "搜尋：",
                    "paginate": {
                        "first": "第一頁",
                        "last": "最後一頁",
                        "next": "下一頁",
                        "previous": "上一頁"
                    }
                },
                "lengthMenu": [5, 10, 25, 50], // 選擇每頁顯示 5, 10, 25, 50 筆
                "lengthChange": true, // 允許改變筆數
                "columnDefs": [
                    { "orderable": false, "targets": [-1] }
                ],
                "order": []
            });
        });
    </script>

}