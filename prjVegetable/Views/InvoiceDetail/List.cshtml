@model IEnumerable<prjVegetable.Models.CInvoiceDetailWrap>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
}

<h1>發票明細管理</h1>
@using (Html.BeginForm())
{
    @:請輸入發票號碼: @Html.TextBox("txtKeyword")
    <button type="submit" class="btn btn-warning">查詢</button>
}
<div class="mt-3 mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary">新增發票號碼</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FSum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FSum)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.FId })" class="btn btn-success">修改</a>
                        <a href="@Url.Action("Delete", new { id = item.FId })" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?');">刪除</a>
                    </td>
                </tr>
            }


        }
    </tbody>
</table>
