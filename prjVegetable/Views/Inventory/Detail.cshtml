       rows.forEach(function (row) {
        var inventoryMainId = parseInt(row.querySelector("input[name='FInventoryMainId']").value, 10);
        var productId = parseInt(row.querySelector("td:first-child").innerText.trim(), 10) || 0;
        var productName = row.querySelector("td:nth-child(2)").innerText.trim();
