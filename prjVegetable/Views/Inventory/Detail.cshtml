                if (response && response.inventoryDetails && response.products) {
                    inventoryList = response.inventoryDetails;

                    // 更新左側欄的資料
                    updateInventoryList(inventoryList);

                    updateTable(0); // 預設顯示第一筆
                } else {
                    console.error("沒有收到 InventoryDetails 或 Products！");
                    alert('查無符合條件的資料');
                    document.getElementById('tableBody').innerHTML = '';
                }

                $("#exampleModal").modal("hide");
            },
            error: function (error) {
                console.error("AJAX 失敗", error);
                alert('發生錯誤，請稍後再試');
            }
        });
    });

    // 更新左側欄的清單
    function updateInventoryList(inventoryList) {
        const inventoryListElement = document.getElementById('inventoryList');
        inventoryListElement.innerHTML = ''; // 清空現有清單

        // 取得唯一的 fInventoryMainId
        const uniqueInventoryMainIds = [...new Set(inventoryList.map(item => item.fInventoryMainId))];
        
        // 遍歷唯一的 fInventoryMainId 並顯示
        uniqueInventoryMainIds.forEach(fInventoryMainId => {
            const listItem = document.createElement('li');
            listItem.classList.add('list-group-item');

            // 找到該 fInventoryMainId 對應的第一筆資料，顯示其細節
            const firstItem = inventoryList.find(item => item.fInventoryMainId === fInventoryMainId);
            listItem.textContent = `${firstItem.fInventoryMainId} - ${firstItem.fBaselineDate} - ${firstItem.fCreatedAt} - ${firstItem.fNote}`;

            // 點擊時顯示該筆資料的詳細內容
            listItem.addEventListener('click', function () {
                updateTable(firstItem.fInventoryMainId);

                // 更新工具列中的資料
                document.getElementById('FBaselineDate').value = firstItem.fBaselineDate || '';
                document.getElementById('FCreatedAt').value = firstItem.fCreatedAt || '';
                document.getElementById('inventoryNoteView').textContent = firstItem.fNote || '';
                document.getElementById('inventoryNoteEdit').value = firstItem.fNote || '';
            });

            inventoryListElement.appendChild(listItem);
        });
    }

        function updateNavigationButtons(currentInventoryMainId) {
        // 假設 inventoryList 已經被填充為搜尋結果

        // 根據 currentInventoryMainId 在 inventoryList 中找到目前的索引
        const currentIndex = inventoryList.findIndex(item => item.fInventoryMainId === currentInventoryMainId);

        // 根據當前索引啟用或禁用導航按鈕
        document.querySelector('[href*="FirstId"]').disabled = currentIndex === 0;
        document.querySelector('[href*="PreviousId"]').disabled = currentIndex === 0;
        document.querySelector('[href*="NextId"]').disabled = currentIndex === inventoryList.length - 1;
        document.querySelector('[href*="LastId"]').disabled = currentIndex === inventoryList.length - 1;
    }

</script>

