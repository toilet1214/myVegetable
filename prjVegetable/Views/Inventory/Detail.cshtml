        FBaselineDate: formattedBaselineDate,
        FCreatedAt: formattedCreatedAt,
        FEditor: 1,
        FNote: noteText // 只更新 FNote
    };

    var products = [];
    var inventoryDetails = [];
    var rows = document.querySelectorAll("table tbody tr");

