<!-- 將系統庫存數量帶入實際庫存數量 -->
<script>
    document.getElementById('syncStockButton').addEventListener('click', function () {
        const rows = document.querySelectorAll('table tbody tr');

        rows.forEach(row => {
            const systemQuantity = row.querySelector('td:nth-child(3)');  // 系統庫存數量欄位
            const actualQuantityInput = row.querySelector('td:nth-child(4) input');  // 實際庫存數量輸入框

            if (systemQuantity && actualQuantityInput) {
                const systemQuantityValue = systemQuantity.textContent.trim();  // 取得系統庫存數量的文字
                actualQuantityInput.value = systemQuantityValue;  // 把系統庫存數量填入實際庫存數量欄位
            }
        });
    });
</script>

<!-- 將實際庫存數量歸零 -->
<script>
    document.getElementById('resetStockButton').addEventListener('click', function () {
        const rows = document.querySelectorAll('table tbody tr');

        rows.forEach(row => {
            const actualQuantityInput = row.querySelector('td:nth-child(4) input');

            if (actualQuantityInput) {
                actualQuantityInput.value = 0;  // 將實際庫存數量設定為 0
            }
        });
    });
</script>