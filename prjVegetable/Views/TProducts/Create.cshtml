@model prjVegetable.Models.TProductWrap

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutERP.cshtml";
}

<h1>新增資料</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FClassification" class="control-label"></label>
                <input asp-for="FClassification" class="form-control" />
                <span asp-validation-for="FClassification" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FPrice" class="control-label"></label>
                <input asp-for="FPrice" class="form-control" />
                <span asp-validation-for="FPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FQuantity" class="control-label"></label>
                <input asp-for="FQuantity" class="form-control" />
                <span asp-validation-for="FQuantity" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FLaunchAt" class="control-label"></label>
                <input asp-for="FLaunchAt" class="form-control" />
                <span asp-validation-for="FLaunchAt" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FStorage" class="control-label"></label>
                <input asp-for="FStorage" class="form-control" />
                <span asp-validation-for="FStorage" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FOrigin" class="control-label"></label>
                <input asp-for="FOrigin" class="form-control" />
                <span asp-validation-for="FOrigin" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="FDescription" class="control-label"></label>
                <input asp-for="FDescription" class="form-control" />
                <span asp-validation-for="FDescription" class="text-danger"></span>
            </div>
        </div>        
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <div>
                <a asp-action="Index">回產品列表</a>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group d-grid justify-content-md-end">
                <input type="submit" value="新增資料" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

