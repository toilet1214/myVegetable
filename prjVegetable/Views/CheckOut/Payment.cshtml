@model System.Collections.Generic.Dictionary<string, string>
@{
    
}
<!DOCTYPE html>
<html>
<body>
    <form style="display:none;" id="form" name="form" method="POST" action="https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5">
        <!--step2 : 收到後端的值印出來-->
        @foreach (var key in @Model.Keys.ToList())
        {
            @(key) <input type="text" name="@key" value="@Model[key]" />

            <br />
        }
        <button type="submit" id="checkoutBtn">送出</button>
    </form>

    <div id="loadercontainer" style="margin: auto; display: flex; justify-content: center; align-items: center;">
        <div class="label" style="font-size: 60px;margin-top:150px">
            載入中
            <div class="loader" style="margin: auto;"></div>
        </div>
    </div>

    <!-- js套件 -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-twzipcode@1.7.14/jquery.twzipcode.min.js"></script>
    <!-- 自己的 -->
    <script src="~/js/ecpay.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("checkoutBtn").click();
        });
    </script>

</body>
</html>